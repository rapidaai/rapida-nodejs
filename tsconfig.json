{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "baseUrl": ".", // Important for paths
        "paths": {
            "@/rapida/*": [
                "src/*"
            ] // Alias @/rapida/* to src/*
        }
    },
    "include": [
        "src/**/*"
    ]
}